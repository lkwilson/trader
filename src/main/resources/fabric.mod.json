{
  "schemaVersion": 1,
  "id": "trader",
  "version": "${version}",
  "name": "trader",
  "description": "Sends messages with new librarian villager trades. Note that in multiplayer, this mod rapidly opens and closes the villager trading window which requires that the player be stationary and not sneaking. This also means it could be detected by anti-cheat engines. These checks can be disabled in settings.",
  "authors": [
    "lkwilson"
  ],
  "contact": {
    "homepage": "https://github.com/lkwilson/trader",
    "sources": "https://github.com/lkwilson/trader"
  },
  "license": "CC0-1.0",
  "icon": "assets/trader/icon.png",
  "environment": "*",
  "entrypoints": {
    "modmenu": [
      "lkwilson.ModMenuIntegration"
    ],
    "client": [
      {
        "value": "lkwilson.TraderClient",
        "adapter": "kotlin"
      }
    ]
  },
  "mixins": [
    "trader.mixins.json",
    {
      "config": "trader.client.mixins.json",
      "environment": "client"
    }
  ],
  "depends": {
    "fabricloader": ">=0.18.1",
    "minecraft": "~1.21.9",
    "java": ">=21",
    "fabric-api": "*",
    "fabric-language-kotlin": "*"
  },
  "suggests": {
    "another-mod": "*"
  }
}